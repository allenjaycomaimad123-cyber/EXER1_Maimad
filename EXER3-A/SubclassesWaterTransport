public class WaterTransport extends Transportation {
    public WaterTransport(String name) {
        super(name);
    }

    @Override
    public void move() {
        System.out.println(name + " is sailing on water.");
    }
}

public class Boat extends WaterTransport {
    public Boat() {
        super("Boat");
    }
}

public class Submarine extends WaterTransport {
    public Submarine() {
        super("Submarine");
    }

    @Override
    public void move() {
        System.out.println(name + " is moving underwater.");
    }
}
